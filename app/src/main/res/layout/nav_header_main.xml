<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/design_default_color_primary_dark"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="24dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Logo de la inmobiliaria -->

    <ImageView
        android:id="@+id/ivLogoHeader"
        android:layout_width="105dp"
        android:layout_height="94dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/string_logo_inmobiliaria"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/title_header"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="-14dp"
        android:textColor="@android:color/white"
        tools:text="Inmobiliaria Balestrieri" />

    <TextView
        android:id="@+id/tvUsuarioLogueado"
        android:layout_width="236dp"
        android:layout_height="29dp"
        android:text="Usuario: "
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</LinearLayout>