<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen -->
            <ImageView
                android:id="@+id/ivInmueble"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Imagen del inmueble"
                android:src="@drawable/ic_launcher_background" />

            <!-- Primera fila: Dirección -->
            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:enabled="false"/>

            <!-- Segunda fila: Precio + Ambientes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/etPrecio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Precio"
                    android:inputType="numberDecimal"
                    android:paddingEnd="4dp"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/etAmbientes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Ambientes"
                    android:inputType="number"
                    android:paddingStart="4dp"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Tercera fila: Superficie + Uso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/etSuperficie"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Superficie"
                    android:inputType="numberDecimal"
                    android:paddingEnd="4dp"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/etUso"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Uso"
                    android:paddingStart="4dp"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Cuarta fila: Tipo + Disponible -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/etTipo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tipo"
                    android:paddingEnd="4dp"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/cbDisponible"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disponible"
                    android:paddingStart="4dp"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Quinta fila: Latitud + Longitud -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/etLatitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Latitud"
                    android:inputType="numberDecimal"
                    android:paddingEnd="4dp"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/etLongitud"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Longitud"
                    android:inputType="numberDecimal"
                    android:paddingStart="4dp"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Sexta fila: ID Propietario + Tiene Contrato -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="4dp">

                <EditText
                    android:id="@+id/etIdPropietario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="ID Propietario"
                    android:inputType="number"
                    android:paddingEnd="4dp"
                    android:enabled="false"/>

                <CheckBox
                    android:id="@+id/cbContratoVigente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contrato vigente"
                    android:paddingStart="4dp"
                    android:enabled="false"/>
            </LinearLayout>

            <!-- Botón Editar / Actualizar -->
            <Button
                android:id="@+id/btnEditarActualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</ScrollView>
