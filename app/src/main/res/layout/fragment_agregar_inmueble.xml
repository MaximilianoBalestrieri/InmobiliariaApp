<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inmuebles.AgregarInmuebleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:spacing="10dp">

            <ImageView
                android:id="@+id/ivFotoInmueble"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/baseline_home_24"
                android:scaleType="centerCrop"
                android:background="@drawable/image_border"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnSeleccionarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Foto" />

            <EditText
                android:id="@+id/etDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DirecciÃ³n" />

            <EditText
                android:id="@+id/etPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Precio" />

            <EditText
                android:id="@+id/etAmbientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ambientes" />

            <EditText
                android:id="@+id/etUso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Uso (Ej: Residencial)" />

            <EditText
                android:id="@+id/etTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo (Ej: Casa, Dpto...)" />

            <Button
                android:id="@+id/btnGuardarInmueble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Inmueble"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
